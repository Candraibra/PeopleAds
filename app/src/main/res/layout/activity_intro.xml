<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".IntroActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/screen_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tab_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:background="@drawable/btn_gradient"
        android:fontFamily="@font/avenir_demi"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="@string/get_started"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/screen_pager"
        app:layout_constraintEnd_toEndOf="@+id/screen_pager"
        app:layout_constraintStart_toStartOf="@+id/screen_pager" />

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/next"
        android:drawableEnd="@drawable/ic_next_black"
        android:fontFamily="@font/avenir_demi"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:src="@drawable/next_red"
        android:text="@string/next"
        android:textColor="@color/colorFontBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen_pager" />
    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/next"
        android:drawableEnd="@drawable/ic_next_black"
        android:fontFamily="@font/avenir_demi"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:src="@drawable/next_red"
        android:text="@string/skip"
        android:textColor="@color/colorFontBlack"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <!-- <Button
         android:id="@+id/btnNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginEnd="16dp"
         android:layout_marginBottom="16dp"
         android:background="@drawable/btn_gradient"
         android:drawableEnd="@drawable/ic_next_white"
         android:drawablePadding="16dp"
         android:fontFamily="@font/avenir_demi"
         android:paddingStart="20dp"
         android:paddingEnd="20dp"
         android:text="@string/next"
         android:textColor="@color/colorWhite"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent" /> -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_indicator"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen_pager"
        app:tabBackground="@drawable/indicator_selector"
        app:tabIndicatorHeight="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>